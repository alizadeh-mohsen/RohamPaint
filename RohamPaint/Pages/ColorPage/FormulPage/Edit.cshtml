@page
@model RohamPaint.Pages.ColorPage.FormulPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ColorFormul</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ColorFormul.Id" />
            <div class="form-group">
                <select hidden asp-for="ColorFormul.ColorId" class="form-control" asp-items="ViewBag.ColorID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ColorFormul.BaseColor" class="control-label"></label>
                <input asp-for="ColorFormul.BaseColor" class="form-control" />
                <span asp-validation-for="ColorFormul.BaseColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorFormul.Weight" class="control-label"></label>
                <input asp-for="ColorFormul.Weight" class="form-control" />
                <span asp-validation-for="ColorFormul.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
