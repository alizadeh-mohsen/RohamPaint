            <div id="cities-container">
                @for (int i = 0; i < Model.ColorCreateViewModel.Formuls.Count; i++)
                {
                    <div class="mb-2 city-row">
                        <input name="ColorCreateViewModel.Formuls[@i].BaseCode" class="form-control d-inline-block w-75" />
                        <input name="ColorCreateViewModel.Formuls[@i].Weight" class="form-control d-inline-block w-75" />
                        <button type="button" class="btn btn-danger btn-sm" onclick="removeCity(this)">X</button>
                    </div>
                }
            </div>

            <button type="button" class="btn btn-secondary" onclick="addCity()">Add City</button>





            <div class="form-group">
                <label asp-for="ColorCreateViewModel.Comment" class="control-label"></label>

                <textarea asp-for="ColorCreateViewModel.Comment" class="form-control" rows="4"></textarea>
                <span asp-validation-for="ColorCreateViewModel.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorCreateViewModel.Usage" class="control-label"></label>
                <textarea asp-for="ColorCreateViewModel.Usage" class="form-control" rows="4"></textarea>
                <span asp-validation-for="ColorCreateViewModel.Usage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
             function addCity() {
            const container = document.getElementById("cities-container");
            const index = container.children.length;

            const div = document.createElement("div");
            div.classList.add("mb-2", "city-row");
            div.innerHTML = `
                <input name="ColorCreateViewModel.Formuls[${index}].BaseCode" class="form-control d-inline-block w-75" />
                <input name="ColorCreateViewModel.Formuls[${index}].Weight" class="form-control d-inline-block w-75" />
                <button type="button" class="btn btn-danger btn-sm" onclick="removeCity(this)">X</button>
            `;
            container.appendChild(div);
        }

        function removeCity(btn) {
            btn.parentElement.remove();
            // re-index inputs
            const rows = document.querySelectorAll(".city-row input");
            rows.forEach((input, i) => input.name = `ColorCreateViewModel.Formuls[${i}]`);
        }


    </script>
}