            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ColorCreateViewModel.CarId" class="control-label"></label>
                <select asp-for="ColorCreateViewModel.CarId" class="form-select" asp-items="ViewBag.CarId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ColorCreateViewModel.ColorTypeId" class="control-label"></label>
                <select asp-for="ColorCreateViewModel.ColorTypeId" class="form-select" asp-items="ViewBag.ColorTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ColorCreateViewModel.Code" class="control-label"></label>
                <input asp-for="ColorCreateViewModel.Code" class="form-control" />
                <span asp-validation-for="ColorCreateViewModel.Code" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ColorCreateViewModel.UnitId" class="control-label"></label>
                <select asp-for="ColorCreateViewModel.UnitId" class="form-select" asp-items="ViewBag.UnitId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ColorCreateViewModel.BaseId" class="control-label"></label>
                <select asp-for="ColorCreateViewModel.BaseId" class="form-select" asp-items="ViewBag.BaseId"></select>
            </div>

            <h5 class="mb-3">Formuls</h5>

