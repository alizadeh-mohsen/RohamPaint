@page
@model RohamPaint.Pages.ColorPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Color</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Color.Id" />
            <div class="form-group">
                <label asp-for="Color.CarId" class="control-label"></label>
                <select asp-for="Color.CarId" class="form-control" asp-items="ViewBag.CarId" ></select>
                <span asp-validation-for="Color.CarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color.ColorTypeId" class="control-label"></label>
                <select asp-for="Color.ColorTypeId" class="form-control" asp-items="ViewBag.ColorTypeId" ></select>
                <span asp-validation-for="Color.ColorTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color.Code" class="control-label"></label>
                <input asp-for="Color.Code" class="form-control" />
                <span asp-validation-for="Color.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color.Comment" class="control-label"></label>
                <input asp-for="Color.Comment" class="form-control" />
                <span asp-validation-for="Color.Comment" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Color.Lock" /> @Html.DisplayNameFor(model => model.Color.Lock)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Color.LastUpdate" class="control-label"></label>
                <input asp-for="Color.LastUpdate" class="form-control" />
                <span asp-validation-for="Color.LastUpdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color.UnitId" class="control-label"></label>
                <select asp-for="Color.UnitId" class="form-control" asp-items="ViewBag.UnitId" ></select>
                <span asp-validation-for="Color.UnitId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color.Accuracy" class="control-label"></label>
                <input asp-for="Color.Accuracy" class="form-control" />
                <span asp-validation-for="Color.Accuracy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color.Usage" class="control-label"></label>
                <input asp-for="Color.Usage" class="form-control" />
                <span asp-validation-for="Color.Usage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color.BaseId" class="control-label"></label>
                <select asp-for="Color.BaseId" class="form-control" asp-items="ViewBag.BaseId" ></select>
                <span asp-validation-for="Color.BaseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
